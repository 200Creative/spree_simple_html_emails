<h3><%= Spree.t('shipment_mailer.shipped_email.dear_customer') %></h3>

<p><%= Spree.t('shipment_mailer.shipped_email.instructions') %></p>

<div class="email-divider"></div>
<p><%= Spree.t('shipment_mailer.shipped_email.shipment_summary') %></p>
<div class="email-divider"></div>
<table>
<% @shipment.manifest.each do |item| %>
  <tr>
    <td><%= item.variant.sku %></td>
    <td><%= item.variant.product.name %></td>
    <td><%= item.variant.options_text %></td>
  </tr>
<% end %>
</table>
<div class="email-divider"></div>

<p><strong><%= Spree.t('shipment_mailer.shipped_email.track_information', :tracking => @shipment.tracking)     if @shipment.tracking %></strong></p>

<p><strong><%= Spree.t('shipment_mailer.shipped_email.track_link',        :url      => @shipment.tracking_url) if @shipment.tracking_url %></strong></p>

<p><%= Spree.t('shipment_mailer.shipped_email.thanks') %></p>
